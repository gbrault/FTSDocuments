    "version": "0.2.0",
    "configurations": [
        {
            "name": "Patch",
            "type": "python",
            "request": "launch",
            "program": "package_patch.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args":["--package", "flask_appbuilder"]
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "fts_main.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": false
        }
    ]
}